
@{
    ViewBag.Title = "Instructors";
}

<h2>Instructors</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>@Html.ActionLink("Detail", "Detail", new { id = item.Id }) </td>
            </tr>
        }
    </tbody>
</table>

